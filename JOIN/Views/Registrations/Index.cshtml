@model JOIN.Models.Registration

@{

}




@using (Html.BeginForm("Register", "Registrations", FormMethod.Post))
{

    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Enter your First name here!", name = "FirstName" })
    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Enter your Last name here!", name = "LastName" })
    @Html.TextBoxFor(m => m.ValidEmail, new { @class = "form-control", placeholder = "Enter e-mail address here!", name = "ValidEmail" })
    <input type="submit" name="Submit" value="Join" />
}

